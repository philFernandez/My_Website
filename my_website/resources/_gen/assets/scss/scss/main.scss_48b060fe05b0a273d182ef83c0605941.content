html{color:#000;font-family:oswald,sans-serif}body{background-color:lightslategrey}h1{color:tomato}div.header{text-align:center}div.header>div{display:inline-block}div.header>div>a>p,div.header>div>p{margin:8px;color:#000;font-family:source code pro,monospace;font-size:1.2rem}a{text-decoration:none}div.header>div>h1{margin:0;font-size:3.5rem;text-shadow:1px 1px 1px #000}i{margin-right:8px}div.wrapper{margin:0 auto;text-align:center}div.main{width:20%;margin:12px 24px;display:inline-block;vertical-align:top;text-align:left}div.main>h1{margin:0;text-shadow:1px 1px #a9a9a9;font-family:source code pro,monospace;font-style:bold;color:#000;font-size:1.3rem}div.card{background-color:#fff;border-radius:5px;box-shadow:1px 1px 1px 1px #000;margin-bottom:32px}div.card>p,div.card>ul{margin:0 auto;font-size:1.2rem}div.card>p{padding:14px}div.card>ul{padding-top:14px;padding-bottom:14px}li>a{color:#008b8b}li>a:hover{text-shadow:1px 1px #008b8b}@media only screen and (max-width:1000px){div.main{display:block;width:90%}}